{
    "$schema": "<relative path to createFormUI.schema.json>",
    "view": {
		"kind":"form",
		"properties": {
			"steps": [
				{
					"name": "deploymentModeSettings",
					"label": "Deployment Mode",
					"elements": [
						{
							"name": "deploymentModeSection",
							"type": "Microsoft.Common.Section",
							"label": "Deployment Mode",
							"elements": [
								{
									"name": "deploymentModeDesc",
									"type": "Microsoft.Common.TextBlock",
									"visible": true,
									"options": {
										"text": "Choose between deployment modes. 'Default (public endpoints)' will deploy services with public endpoints. 'vNet Integrated' will deploy services with Private Link endpoints in a given vNet.",
										"link": {
											"label": "See more information about the architecture here.",
											"uri": "https://www.microsoft.com"
										}
									}
								},
								{
									"name": "deploymentMode",
									"type": "Microsoft.Common.OptionsGroup",
									"label": "Deployment Mode",
									"defaultValue": "vNet Integrated",
									"toolTip": "",
									"constraints": {
										"allowedValues": [
											{
												"label": "Default (public endpoints)",
												"value": "default"
											},
											{
												"label": "vNet Integrated",
												"value": "vNet"
											}
										],
										"required": true
									},
									"visible": true
								}
							],
							"visible": true
						}
					]
				},
				{
					"name": "coreSettings",
					"label": "Core Settings",
					"elements": [
						
					]
				},
				{
					"name": "purviewSettings",
					"label": "Azure Purview Settings",
					"elements": [
						{
							"name": "ctrlDeployPurview",
							"type": "Microsoft.Common.CheckBox",
							"label": "Deploy Azure Purview",
							"constraints": {
								"required": false
							}
						}
					]
				},
				{
					"name": "aiSettings",
					"label": "AI Settings",
					"elements": [
						{
							"name": "ctrlDeployAI",
							"type": "Microsoft.Common.CheckBox",
							"label": "Deploy AI Services",
							"constraints": {
								"required": false
							}
						}
					]
				},
				{
					"name": "streamingSettings",
					"label": "Streaming Settings",
					"elements": [
						{
							"name": "ctrlDeployStreaming",
							"type": "Microsoft.Common.CheckBox",
							"label": "Deploy Data Streaming Services",
							"constraints": {
								"required": false
							}
						}
					]
				},
				{
					"name": "dataSharingSettings",
					"label": "Data Sharing Settings",
					"elements": [
						{
							"name": "ctrlDeployDataShare",
							"type": "Microsoft.Common.CheckBox",
							"label": "Deploy Azure Data Share",
							"constraints": {
								"required": false
							}
						}
					]
				},
				{
					"name": "networkSettings",
					"label": "Network Settings",
					"elements": [
						{
							"name": "ctrlDeployPrivateDNSZones",
							"type": "Microsoft.Common.CheckBox",
							"label": "Deploy Private DNS Zones",
							"constraints": {
								"required": false
							}
						}
					]
				},
				{
					"name": "tags",
					"label": "Tags",
					"elements": [
						{
							"name": "tagsByResource",
							"type": "Microsoft.Common.TagsByResource",
							"resources": [
								"Microsoft.Storage/storageAccounts",
								"Microsoft.Compute/virtualMachines"
							]
						}
					]
				}
			]
		},
        "outputs": {
			"parameters":{
				"deploymentMode": "[steps('deploymentModeSettings').deploymentModeSection.deploymentMode]",
				"ctrlDeployPurview": "[steps('purviewSettings').ctrlDeployPurview]",
				"ctrlDeployAI": "[steps('aiSettings').ctrlDeployAI]",
				"ctrlDeployStreaming": "[steps('streamingSettings').ctrlDeployStreaming]",
				"ctrlDeployDataShare": "[steps('dataSharingSettings').ctrlDeployDataShare]",
				"ctrlDeployPrivateDNSZones": "[steps('networkSettings').ctrlDeployPrivateDNSZones]"
			}
        }
    }
}