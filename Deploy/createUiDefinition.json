{
    "$schema": "<relative path to createFormUI.schema.json>",
    "view": {
		"kind":"form",
		"properties": {
			"title": "Analytics end-to-end with Azure Synapse - Deployment Accelerator",
			"steps": [
				{
                    "name": "basics",
                    "label": "Basics",
                    "elements": [
                        {
                            "name": "resourceScope",
                            "type": "Microsoft.Common.ResourceScope"
                        },
						{
							"name": "deploymentModeSection",
							"type": "Microsoft.Common.Section",
							"label": "Deployment Mode",
							"elements": [
								{
									"name": "deploymentModeDesc",
									"type": "Microsoft.Common.TextBlock",
									"visible": true,
									"options": {
										"text": "Choose between deployment modes. 'Default (public endpoints)' will deploy services with public endpoints. 'vNet Integrated' will deploy services with Private Link endpoints in a given vNet.",
										"link": {
											"label": "See more information about the architecture here.",
											"uri": "https://www.microsoft.com"
										}
									}
								},
								{
									"name": "deploymentMode",
									"type": "Microsoft.Common.OptionsGroup",
									"label": "Deployment Mode",
									"defaultValue": "Default (public endpoints)",
									"toolTip": "",
									"constraints": {
										"allowedValues": [
											{
												"label": "Default (public endpoints)",
												"value": "default"
											},
											{
												"label": "vNet Integrated",
												"value": "vNet"
											}
										],
										"required": true
									},
									"visible": true
								}
							],
							"visible": true
						}
                    ]
                },
				{
					"name": "coreSettings",
					"label": "Core Settings",
					"elements": [
						{
                            "name": "synapseSettingsSection",
                            "type": "Microsoft.Common.Section",
                            "label": "Azure Synapse Settings",
                            "elements": [
                                {
                                    "name": "synapseSection",
                                    "type": "Microsoft.Common.TextBlock",
                                    "visible": true,
                                    "options": {
                                        "text": "Please configure your Synapse Workspace.",
                                        "link": {
                                            "label": "Learn more",
                                            "uri": "https://www.microsoft.com"
                                        }
                                    }
                                },
                                {
									"name": "ctrlDeploySynapseSQLPool",
									"type": "Microsoft.Common.CheckBox",
									"label": "Deploy Dedicated Synapse SQL Pool",
									"toolTip": "Synapse SQL Dedicated Pool will be provisioned with DW100c SKU.",
									"constraints": {
										"required": false
									}
								},
								{
									"name": "synapseDedicatedSQLPoolName",
									"type": "Microsoft.Common.TextBox",
									"label": "Synapse SQL Pool Name",
									"placeholder": "",
									"defaultValue": "EnterpriseDW",
									"toolTip": "Use only allowed characters",
									"constraints": {
										"required": true,
										"regex": "^[a-z0-9A-Z]{1,30}$",
										"validationMessage": "Only alphanumeric characters are allowed, and the value must be 1-30 characters long."
									},
									"visible": "[equals(steps('coreSettings').synapseSettingsSection.ctrlDeploySynapseSQLPool, true)]"
								},
								{
									"name": "ctrlDeploySynapseSparkPool",
									"type": "Microsoft.Common.CheckBox",
									"label": "Deploy Dedicated Synapse Spark Pool",
									"constraints": {
										"required": false
									}
								},
								{
									"name": "synapseSparkPoolName",
									"type": "Microsoft.Common.TextBox",
									"label": "Synapse Spark Pool Name",
									"placeholder": "",
									"defaultValue": "SparkCluster",
									"toolTip": "Use only allowed characters",
									"constraints": {
										"required": true,
										"regex": "^[a-z0-9A-Z]{1,30}$",
										"validationMessage": "Only alphanumeric characters are allowed, and the value must be 1-30 characters long."
									},
									"visible": "[equals(steps('coreSettings').synapseSettingsSection.ctrlDeploySynapseSparkPool, true)]"
								}
								
                            ],
                            "visible": true
                        }
						
					]
				},
				{
					"name": "purviewSettings",
					"label": "Azure Purview Settings",
					"elements": [
						{
							"name": "ctrlDeployPurview",
							"type": "Microsoft.Common.CheckBox",
							"label": "Deploy Azure Purview",
							"constraints": {
								"required": false
							}
						}
					]
				},
				{
					"name": "aiSettings",
					"label": "AI Settings",
					"elements": [
						{
							"name": "ctrlDeployAI",
							"type": "Microsoft.Common.CheckBox",
							"label": "Deploy AI Services",
							"constraints": {
								"required": false
							}
						}
					]
				},
				{
					"name": "streamingSettings",
					"label": "Streaming Settings",
					"elements": [
						{
							"name": "ctrlDeployStreaming",
							"type": "Microsoft.Common.CheckBox",
							"label": "Deploy Data Streaming Services",
							"constraints": {
								"required": false
							}
						}
					]
				},
				{
					"name": "dataSharingSettings",
					"label": "Data Sharing Settings",
					"elements": [
						{
							"name": "ctrlDeployDataShare",
							"type": "Microsoft.Common.CheckBox",
							"label": "Deploy Azure Data Share",
							"constraints": {
								"required": false
							}
						}
					]
				},
				{
					"name": "networkSettings",
					"label": "Network Settings",
					"elements": [
						{
							"name": "ctrlDeployPrivateDNSZones",
							"type": "Microsoft.Common.CheckBox",
							"label": "Deploy Private DNS Zones",
							"default":true,
							"constraints": {
								"required": false
							},
							"visible": "[equals(steps('basics').deploymentModeSection.deploymentMode, 'vNet')]"
						}
					]
				},
				{
					"name": "tags",
					"label": "Tags",
					"elements": [
						{
							"name": "tagsByResource",
							"type": "Microsoft.Common.TagsByResource",
							"resources": [
								"Microsoft.Storage/storageAccounts",
								"Microsoft.Compute/virtualMachines"
							]
						}
					]
				}
			]
		},
        "outputs": {
			"kind":"ResourceGroup",
			"resourceGroupId": "[steps('basics').resourceScope.resourceGroup.id]",
			"parameters":{
				"deploymentMode": "[steps('basics').deploymentModeSection.deploymentMode]",
				"ctrlDeployPurview": "[steps('purviewSettings').ctrlDeployPurview]",
				"ctrlDeployAI": "[steps('aiSettings').ctrlDeployAI]",
				"ctrlDeployStreaming": "[steps('streamingSettings').ctrlDeployStreaming]",
				"ctrlDeployDataShare": "[steps('dataSharingSettings').ctrlDeployDataShare]",
				"ctrlDeployPrivateDNSZones": "[steps('networkSettings').ctrlDeployPrivateDNSZones]",
				"ctrlDeploySynapseSQLPool": "[steps('coreSettings').synapseSettingsSection.ctrlDeploySynapseSQLPool]",
				"synapseDedicatedSQLPoolName": "[steps('coreSettings').synapseSettingsSection.synapseDedicatedSQLPoolName]",
				"ctrlDeploySynapseSparkPool": "[steps('coreSettings').synapseSettingsSection.ctrlDeploySynapseSparkPool]",
				"synapseSparkPoolName": "[steps('coreSettings').synapseSettingsSection.synapseSparkPoolName]"

			}
        }
    }
}